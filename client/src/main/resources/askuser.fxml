<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.271" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.cloudstorage.client.AskUserController">
<HBox alignment="CENTER" spacing="5">
    <Label fx:id="labelAsk" text="Укажите имя каталога" HBox.hgrow="ALWAYS"><font><Font name="System Bold" size="12.0" /></font></Label>
    <TextField fx:id="textFieldAsk" HBox.hgrow="ALWAYS" onAction="#onBtnYesAction"/>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
</HBox>
<HBox alignment="CENTER" spacing="5">
    <Button fx:id="btnAskYes" onAction="#onBtnYesAction" text="Yes" />
    <Button fx:id="btnAskNo" onAction="#onBtnNoAction" text="No" />
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
</HBox>
</VBox>
