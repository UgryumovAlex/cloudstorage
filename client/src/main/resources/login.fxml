<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" spacing="5.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.cloudstorage.client.LoginController">
<HBox>
    <Label prefHeight="17.0" prefWidth="65.0" text="login : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
    <TextField fx:id="loginField" promptText="login" />
</HBox>
<HBox>
    <Label text="password : ">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Label>
    <PasswordField fx:id="passwordField" promptText="password" />
</HBox>
<Button fx:id="connectButton" minWidth="100" onAction="#tryToLogin" text="Connect" />
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
